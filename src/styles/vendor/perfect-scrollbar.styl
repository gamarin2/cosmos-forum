ssize = 4px
sfg = hsla(0,0,0,0.33)
sbg = transparent

.ps-container > .ps-scrollbar-x-rail,
.ps-container > .ps-scrollbar-y-rail
  opacity 0
  transition 150ms ease opacity

.ps-container:hover > .ps-scrollbar-x-rail,
.ps-container:hover > .ps-scrollbar-y-rail
  opacity 1

.ps-scrollbar-y-rail
  position absolute
  right 1px !important
  width ssize
  background sbg

.ps-scrollbar-y
  position absolute
  width ssize
  height ssize
  background sfg
